         <font>
            <Font size="18.0" />
         </font></Label>

      <!-- Team 1 Batting Card (Left Top) -->
      <VBox fx:id="team1BattingVBox" layoutX="30.0" layoutY="119.0" prefWidth="220.0" spacing="3.0" style="-fx-border-color: #1E90FF; -fx-border-width: 2px; -fx-padding: 10px; -fx-background-color: #F0F8FF;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;" text="Batting Lineup" />
         </children>
      </VBox>

      <!-- Team 2 Bowling Card (Right Top) -->
      <VBox fx:id="team2BowlingVBox" layoutX="257.0" layoutY="119.0" prefWidth="220.0" spacing="3.0" style="-fx-border-color: #B22222; -fx-border-width: 2px; -fx-padding: 10px; -fx-background-color: #FFE4E1;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #B22222;" text="Bowling Figures" />
         </children>
      </VBox>

      <!-- Team 2 Batting Card (Right Bottom) -->
      <VBox fx:id="team2BattingVBox" layoutX="257.0" layoutY="280.0" prefHeight="41.0" prefWidth="220.0" spacing="3.0" style="-fx-border-color: #FF6347; -fx-border-width: 2px; -fx-padding: 10px; -fx-background-color: #FFF5EE;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #FF6347;" text="Batting Lineup" />
         </children>
      </VBox>

      <!-- Team 1 Bowling Card (Left Bottom) -->
      <VBox fx:id="team1BowlingVBox" layoutX="30.0" layoutY="280.0" prefWidth="220.0" spacing="3.0" style="-fx-border-color: #228B22; -fx-border-width: 2px; -fx-padding: 10px; -fx-background-color: #F0FFF0;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #228B22;" text="Bowling Figures" />
         </children>
      </VBox>

      <!-- Overview Section -->
      <Label layoutX="30.0" layoutY="470.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #4B0082;" text="Match Overview" />
      <ScrollPane fx:id="overviewScroll" layoutX="30.0" layoutY="500.0" prefHeight="120.0" prefWidth="470.0" style="-fx-border-color: #4B0082; -fx-border-width: 1px;">
         <content>
            <Label fx:id="overviewLabel" prefWidth="450.0" style="-fx-padding: 10px; -fx-font-family: 'Courier New';" wrapText="true" />
         </content>
      </ScrollPane>
      <Label layoutX="30.0" layoutY="262.0" text="2nd Innings" textFill="#279f09">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="30.0" layoutY="101.0" text="1st Innings" textFill="#279f09">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
