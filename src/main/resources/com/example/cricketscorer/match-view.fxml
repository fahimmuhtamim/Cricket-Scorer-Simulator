<AnchorPane prefHeight="632.0" prefWidth="524.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cricketscorer.MatchViewController">
   <children>
      <!-- Match Title -->
      <Label fx:id="team1Label" layoutX="80.0" layoutY="20.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;" text="India" />
