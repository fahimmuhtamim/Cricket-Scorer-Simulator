      <!-- Team Scores - NEW -->
      <Label fx:id="team1TotalScore" layoutX="80.0" layoutY="45.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;" text="34-0" />
